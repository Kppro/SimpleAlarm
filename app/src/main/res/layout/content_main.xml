<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.simplealarm.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:id="@+id/alarmStatusTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alarm status :"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@+id/alarmStatus"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/alarmStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/alarmStatusTitle"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/ctaCheckAlarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Alarm Status"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/alarmStatus"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/ctaSetAlarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Alarm"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/ctaCheckAlarm"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</android.support.constraint.ConstraintLayout>
